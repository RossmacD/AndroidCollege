<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="exercise"
            type="com.example.ca1androidapp.database.Exercise" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddExerciseActivityFragment"
        tools:showIn="@layout/activity_add_exercise">

        <EditText
            android:id="@+id/addExerciseNameField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:ems="10"
            android:text='@{exercise.name?? ""}'
            android:hint="@string/exercise_name_hint"
            android:inputType="textPersonName"
            android:singleLine="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/addExerciseWeightField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:ems="10"
            android:hint="@string/exercise_weight_hint"
            android:text='@{exercise.name != null ? String.valueOf(exercise.weight): ""}'
            android:inputType="numberDecimal"
            app:layout_constraintEnd_toEndOf="@+id/addExerciseNameField"
            app:layout_constraintStart_toStartOf="@+id/addExerciseNameField"
            app:layout_constraintTop_toBottomOf="@+id/addExerciseNameField" />

        <EditText
            android:id="@+id/addExerciseRepsField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:ems="10"
            android:hint="@string/exercise_reps_hint"
            android:text='@{exercise.name != null ? String.valueOf(exercise.reps): ""}'
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="@+id/addExerciseWeightField"
            app:layout_constraintStart_toStartOf="@+id/addExerciseWeightField"
            app:layout_constraintTop_toBottomOf="@+id/addExerciseWeightField" />

        <EditText
            android:id="@+id/addExerciseSetsField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:ems="10"
            android:hint="@string/exercise_sets_hint"
            android:text='@{exercise.name != null ? String.valueOf(exercise.sets): ""}'
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="@+id/addExerciseRepsField"
            app:layout_constraintStart_toStartOf="@+id/addExerciseRepsField"
            app:layout_constraintTop_toBottomOf="@+id/addExerciseRepsField" />


        <Button
            android:id="@+id/add_exercise_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/add_exercise_button_text"
            app:layout_constraintEnd_toEndOf="@+id/addExerciseSetsField"
            app:layout_constraintTop_toBottomOf="@id/addExerciseSetsField" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>